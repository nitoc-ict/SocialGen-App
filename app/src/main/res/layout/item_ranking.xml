<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/text_item_ranking_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.rankingDataList[potion].rank.toString()}"
            android:textSize="24sp"
            android:gravity ="end"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="位"
            android:textSize="24sp"/>
        <View
            android:layout_width="8dp"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/text_item_ranking_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.rankingDataList[potion].userName}"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/text_item_ranking_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@{viewMode.rankingDataList[potion].score.toString()}"
            android:gravity="end"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pt"
            android:textSize="16sp"/>
</LinearLayout>